<mapper namespace="kr.co.coffeemall.reply">

	<insert id="insert">
		INSERT INTO tbl_qna_reply(qno, replyText) VALUES(#{qno}, #{replyText})
	</insert>

	<select id="select" resultType="QnA">
		SELECT replyText FROM tbl_qna_reply WHERE qno = #{qno}
	</select>
	
</mapper>